<form action="/auth/register" method="post">

    <input type="text"
           class="form-control"
           placeholder="Имя пользователя"
           name="username">

    <input type="password"
           class="form-control"
           placeholder="Пароль"
           name="password">

    <select name="roles[]" class="form-control" multiple>

        <% roles.forEach(role => { %>
            <option value="<%= role.id %>">
                <%= role.rolename %>
            </option>
        <% })%>

    </select>

    <br>

    <input type="submit" class="btn btn-primary" value="Зарегистрировать"></input>

</form>
